<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/playlistDiaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Playlist"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/playlistLabelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:text="Enter Name"
        android:textSize="16sp"
        android:textColor="@color/colorGrey"
        android:layout_below="@+id/playlistDiaTitle"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/playlistInput"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:maxLength="50"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_below="@+id/playlistLabelTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="false">

        <requestFocus />

    </EditText>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/btnCreate"
        android:layout_below="@+id/playlistInput"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/playlistInput"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:layout_alignBottom="@+id/btnCreate"
        android:layout_toStartOf="@+id/btnCreate" />

</RelativeLayout>